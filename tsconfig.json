{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"module": "ESNext",
		"target": "ES5",
		"lib": ["dom", "esnext"],
		"jsx": "react",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
